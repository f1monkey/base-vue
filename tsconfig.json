{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "common": ["src/common"]
    },
    "strict": true,
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "newLine": "LF",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve"
  },
  "include": [
    "src/common/**/*.ts",
    "src/common/**/*.tsx",
    "src/common/**/*.vue"
  ]
}
